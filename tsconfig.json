{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": false,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ESNext", "DOM", "WebWorker"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "type-docs"
  }
}

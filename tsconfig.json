{
  "compilerOptions": {
    "target": "esnext",
    "esModuleInterop": true,
    "declaration": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "type-docs"
  }
}
